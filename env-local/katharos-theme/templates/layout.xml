<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="assets_frontend" inherit_id="web.assets_frontend" name="My Custom Assets">
        <!-- Include your custom CSS and JS -->
        <xpath expr="." position="inside">
            <link rel="stylesheet" href="/katharos-theme/static/src/css/style.css"/>
            <!-- <script type="text/javascript" src="/katharos-theme/static/src/js/my_custom_script.js"></script> -->
        </xpath>
    </template>

    <!-- If you want to modify the layout template -->
    <template id="custom_layout" inherit_id="web.layout" name="Custom Layout">
        <xpath expr="//div[@id='wrap']" position="inside">
            <!-- Add your custom HTML or modifications here -->
            <div class="my-custom-div">
                <h1>Welcome to My Custom Theme!</h1>
            </div>
        </xpath>
    </template>
</odoo>
